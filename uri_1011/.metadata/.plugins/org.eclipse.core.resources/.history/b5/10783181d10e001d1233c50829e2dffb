import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc= new Scanner(System.in);
		
		int numero= sc.nextInt();
		
		int quantidade= 0;
		int somar= 0;
		int acrescentar=0;
		
		if ( numero%2 == 1) {
			numero +=1;
		}
		
		while ( acrescentar <= 4) {
			
			if ( acrescentar == 0) {
				
				somar = numero;
				acrescentar += 1;
			}
			
			else if ( acrescentar == 1) {
				
				quantidade= numero+ 2;
				somar += quantidade; 
				acrescentar += 1;
			}
			else if ( acrescentar == 2) {
				
				quantidade= numero+ 4;
				somar += quantidade;
				acrescentar += 1;
			}
			else if ( acrescentar == 3) {
				
				quantidade= numero+ 6;
				somar += quantidade;
				acrescentar += 1;
			}
			else {
				
				quantidade= numero+ 8;
				somar += quantidade;
				acrescentar += 1;
			}
			
			
			
		}


	}

}
